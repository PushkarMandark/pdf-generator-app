                        }
                    }
                },
                fill: {
                    type: 'solid',
                    colors: ['#34c98e']
                },
                stroke: {
                    lineCap: 'round'
                }
            };

            const chart = new ApexCharts(document.querySelector("#gauge-chart"), gaugeOptions);
            chart.render().then(() => {
                const needle = document.createElement('div');
                needle.className = 'needle';
                needle.style.transform = `translateX(-50%) rotate(${angle}deg)`;
                document.getElementById('gauge-container').appendChild(needle);
            });
        </script>


