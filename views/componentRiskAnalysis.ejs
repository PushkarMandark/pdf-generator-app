<h1 class="text-2xl font-bold text-primary mb-4">3. Component Risk and Lifecycle Analysis</h1>
<div class="overflow-x-auto page-break-inside-avoid">
    <table class="min-w-full bg-white border border-gray-200">
        <thead class="bg-gray-800 text-white">
            <tr>
                <th class="text-left py-3 px-4 uppercase font-semibold text-sm">MPN</th>
                <th class="text-left py-3 px-4 uppercase font-semibold text-sm">Lifecycle Status</th>
                <th class="text-left py-3 px-4 uppercase font-semibold text-sm">Risk Level</th>
                <th class="text-left py-3 px-4 uppercase font-semibold text-sm">Remarks</th>
            </tr>
        </thead>
        <tbody class="text-gray-700">
            <% data.componentRiskAnalysis.forEach((row, index) => { %>
                <tr class="<%= index % 2 === 0 ? 'bg-gray-100' : 'bg-white' %>">
                    <td class="py-3 px-4"><%= row.MPN %></td>
                    <td class="py-3 px-4"><%= row['Lifecycle Status'] %></td>
                    <td class="py-3 px-4">
                        <span class="px-2 py-1 font-semibold leading-tight rounded-full <%= 
                            row['Risk Level'] === 'High' ? 'bg-red-100 text-red-700' : 
                            row['Risk Level'] === 'Medium' ? 'bg-yellow-100 text-yellow-700' : 
                            'bg-green-100 text-green-700' 
                        %>">
                            <%= row['Risk Level'] %>
                        </span>
                    </td>
                    <td class="py-3 px-4 text-sm"><%= row.Remarks %></td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</div>
